[general]
log4rs_config = "stegos-log4rs.toml"

[keychain]
private_key = "testing/node{{NODE_ID}}/stegos.skey"
public_key = "testing/node{{NODE_ID}}/stegos.pkey"

[network]
node_id = "node{{NODE_ID}}"
bind_ip = "127.0.0.1"
bind_port = {{ NODE_ID|int + 10054 }}
advertise_local_ips = false
broadcast_topic = "chat"
{% if NODE_ID != "01" %}
seed_nodes = [
    "/ip4/127.0.0.1/tcp/10055",
]
{% endif %}
advertised_addresses = [
    "/ip4/127.0.0.1/tcp/{{ NODE_ID|int + 10054 }}",
]
